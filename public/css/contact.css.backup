body {
    font-family: Arial, sans-serif;
    background-color: #f8fdff;
    margin: 0;
    padding: 0;
}

.contact-container {
    display: flex;
    max-width: 1100px;
    margin: 40px auto;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
    overflow: hidden;
    border: 1px solid #cceaff;
}

.form-section, .contact-info {
    flex: 1;
    padding: 30px;
}

h2, h3 {
    margin-bottom: 20px;
}

.form-row {
    display: flex;
    gap: 20px;
    margin-bottom: 15px;
}

.form-group {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.form-group label {
    margin-bottom: 5px;
    font-weight: bold;
    font-size: 14px;
    color: #333;
}

.full-width {
    margin-top: 15px;
}

input[type="text"], input[type="email"], input[type="tel"], textarea {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 8px;
    margin-top: 5px;
    font-size: 14px;
}

textarea {
    resize: vertical;
    height: 100px;
}

.checkbox-group {
    margin: 15px 0;
    display: flex;
    align-items: center;
}

.checkbox-group input {
    margin-right: 10px;
}

.submit-btn {
    background-color: black;
    color: white;
    padding: 10px 25px;
    border: none;
    border-radius: 25px;
    font-size: 16px;
    cursor: pointer;
}

.contact-info {
    background-color: #f9f9f9;
    border-left: 1px solid #eee;
}

.info-block {
    margin-bottom: 20px;
}

.info-block strong {
    display: block;
    margin-bottom: 5px;
    font-size: 13px;
    color: #333;
}

.info-block p {
    margin: 0;
    font-size: 14px;
}


/* Add your existing CSS here */

@media (max-width: 768px) {
    .contact-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-section, .contact-info {
        width: 100%;
        margin-bottom: 20px;
    }

    .form-row {
        flex-direction: column;
    }

    .form-group {
        width: 100%;
    }

    .info-block {
        text-align: center;
    }
}