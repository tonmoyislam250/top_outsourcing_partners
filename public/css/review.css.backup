body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}
.review-grid {
  max-width: 1200px;
  margin: 40px auto;
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 20px;
  padding: 20px;
}
.review-card {
  background-color: #eef7ff; /* Match background color with the section header */
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  font-size: 14px;
  line-height: 1.6;
  position: relative;
  max-width: 348px; /* Limit the width of review cards */
  margin: 15px auto; /* Center the cards */
}
.review-card__avatar {
  width: 32px; /* Increased size for better visibility */
  height: 32px; /* Increased size for better visibility */
  position: absolute;
  top: -16px; /* Adjusted to center the avatar */
  left: -16px;
  border-radius: 50%;
  /* Removed overflow: hidden to ensure SVG is fully visible */
}
.review-card__avatar svg {
  width: 100%;
  height: 100%;
}
.review-card--highlighted {
  background-color: #d7f0ff;
  border: 2px solid #00aaff;
  position: relative;
}
.review-action {
  text-align: center;
  margin-top: 20px;
}
.review-action__button {
  background-color: black;
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  border: none;
  cursor: pointer;
  font-weight: bold;
}

.success-stories-heading {
  background-color: #fff9db; /* Light yellow background */
  padding: 20px 0; /* Add padding for spacing */
}

.success-stories-heading h2 {
  font-size: 36px; /* Bigger heading */
  font-weight: bold;
  text-align: center;
  margin-bottom: 10px;
}

.success-stories-heading p {
  font-size: 18px; /* Bigger description */
  text-align: center;
  margin-bottom: 20px;
  color: #555; /* Subtle text color */
}