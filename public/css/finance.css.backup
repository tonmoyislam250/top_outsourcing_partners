body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    padding: 0;
    background: #fff;
    color: #000;
  }
  .section {
    text-align: center;
    padding: 50px 20px;
  }
  .section h1 {
    font-size: 32px;
    margin-bottom: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    max-width: 1000px;
    margin: 0 auto 50px;
  }

  .custom-left {
    position: relative;
    left: 182px;
  }
  
  @media (max-width: 768px) {
    .custom-left {
      left: 0; /* Reset on mobile */
    }
  }
  

  .stats-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin: 50px auto;
    max-width: 1000px;
    padding: 0 20px;
}

.stat-card {
    flex: 1 1 300px;
    background: #E8F8E8;
    padding: 20px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    gap: 20px;
    box-sizing: border-box;
}

.stat-icon {
    width: 100%;
    max-width: 100px;
    flex-shrink: 0;
}

.stat-content {
    flex: 1;
}

.stat-percentage {
    font-size: 2rem;
    font-weight: bold;
}

.stat-description {
    margin: 10px 0;
    font-size: 1rem;
}

/* Mobile View */
@media (max-width: 600px) {
    .stat-card {
        flex-direction: column;
        align-items: flex-start;
        text-align: left;
    }

    .stat-icon {
        max-width: 80px;
        margin-bottom: 10px;
    }

    .stat-percentage {
        font-size: 1.5rem;
    }

    .stat-description {
        font-size: 0.95rem;
    }
}

  

  .card {
    background: #f9f9f9;
    border-radius: 12px;
    padding: 30px 20px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s;
  }
  .card:hover {
    transform: translateY(-5px);
  }
  .card img {
    height: 40px;
    margin-bottom: 15px;
  }
  .card p {
    margin: 0;
    font-weight: 600;
  }
  .stats {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 30px;
  }
  .stat-box {
    background: #e8f5e9;
    border-radius: 12px;
    padding: 30px;
    max-width: 400px;
    text-align: left;
    flex: 1;
  }
  .stat-box h2 {
    font-size: 32px;
    color: #2e7d32;
    margin-bottom: 10px;
  }
  .stat-box p {
    font-size: 14px;
    margin: 0;
  }


  .finance-section {
    padding: 50px 20px;
  }
  .finance-service {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    max-width: 1200px;
    margin: 50px auto 80px;
  }
  .finance-service.reverse {
    flex-direction: row-reverse;
  }
  .finance-image-wrapper {
    flex: 1;
    position: relative;
  }
  .finance-image-wrapper img {
    width: 100%;
    max-width: 500px;
    border-radius: 20px;
  }
  .finance-badge {
    position: absolute;
    bottom: -20px;
    left: 20px;
    background: white;
    padding: 15px 20px;
    border-radius: 12px;
    border-top: 3px solid #2e7d32; /* Added green border top color to match theme */
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 10px;
    text-align: left; /* Align text to the left */
  }
  .finance-badge img {
    width: 50px;
    height: 60px;
  }
  .finance-badge span {
    font-size: 14px;
    color: #444;
  }
  .finance-content {
    flex: 1;
  }
  .finance-content h2 {
    font-size: 22px;
    margin-bottom: 15px;
  }
  .finance-content p {
    font-size: 15px;
    line-height: 1.6;
    margin-bottom: 25px;
    color: #444;
  }
  .finance-content button {
    background: #000;
    color: #fff;
    padding: 12px 24px;
    border: none;
    border-radius: 30px;
    font-weight: 600;
    cursor: pointer;
  }
  @media (max-width: 768px) {
    .finance-service {
      flex-direction: column;
    }
    .finance-service.reverse {
      flex-direction: column;
    }
    .finance-badge {
      position: relative;
      bottom: unset;
      left: unset;
      margin-top: 15px;
    }
  }

.finance-badge.top-right {
  top: 2px;
  right: -2px;
  left: unset;
  border-top: none;
  bottom: unset;
  padding: 10px;
  background: none; /* Remove background */
  box-shadow: none; /* Remove shadow */
}

.finance-badge.top-right img {
  width: 80px;
  height: 80px;
}

.finance-badge.top-left {
  top: -20px;
  left: -20px;
  right: unset;
  border-top: none;
  bottom: unset;
  padding: 10px;
  border-radius: 50%;
  background: none; /* Remove background */
  box-shadow: none; /* Remove shadow */
}

.finance-badge.top-left img {
  width: 80px;
  height: 80px;
}

@media (max-width: 768px) {
  .finance-badge.top-right,
  .finance-badge.top-left {
    top: -360px;
    right: unset;
    left: -149px;
    bottom: unset;
    margin: 10px auto;
    position: relative;
    display: inline-block;
    justify-content: center;
    align-items: center;
  }finance-badge

  .finance-badge.top-right img,
  .finance-badge.top-left img {
    width: 80px;
    height: 80px;
  }
  .finance-image-wrapper {
    height: auto; /* Adjust height to be less */
    max-height: 310px; /* Set a maximum height */
  }
}

.section-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 40px; /* Space between header and content */
}

.section-header .section-icon {
    width: 50px;
    height: auto;
    vertical-align: middle; /* Ensure proper alignment */
}

.section-header .section-title {
    margin: 0; /* Remove any default margin for alignment */
}

.section-header .section-description {
    font-size: 16px;
    color: #666; /* Slightly lighter color for description */
    max-width: 600px; /* Limit width for better readability */
    text-align: center; /* Center align the description */
}
