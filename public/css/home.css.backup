* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    background-color: #e6f5ff;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.header {
    display: flex;
    justify-content: flex-end;
    padding: 20px 0;
    background-color: #f3e5f5;
}

.btn {
    background-color: #222;
    color: white;
    padding: 12px 30px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn:hover {
    background-color: #444;
}

.hero {
    text-align: center;
    padding: 30px 0;
}

.hero h1 {
    font-size: 42px;
    margin-bottom: 30px;
    color: #222;
}

.hero p {
    font-size: 18px;
    max-width: 900px;
    margin: 0 auto 50px;
}

.services {
    padding: 20px 0 80px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.services-header {
    text-align: center;
    margin-bottom: 40px;
}

.services-header h2 {
    font-size: 24px;
    letter-spacing: 2px;
    color: #333;
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 900px;
    width: 100%;
    margin: 0 auto;
}

.service-card {
    background-color: white;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.service-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
}

.accounting-icon {
    color: #7BC043;
}

.ai-icon {
    color: #9B59B6;
}

.training-icon {
    color: #5E50F9;
}

.support-icon {
    color: #B03A2E;
}

.data-icon {
    color: #2E86C1;
}

.employee-icon {
    color: #BADC58;
}

.service-card h3 {
    font-size: 22px;
    margin-bottom: 15px;
    text-align: left;
}

.service-card p {
    color: #666;
    margin-bottom: 25px;
    font-size: 16px;
    text-align: left;
}

.service-card .btn-secondary {
    background-color: white;
    color: #333;
    border: 1px solid #ddd;
    padding: 10px 25px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 500;
    display: block;
    text-align: center;
    transition: all 0.3s ease;
}

.service-card .btn-secondary:hover {
    background-color: #f0f0f0;
    border-color: #999;
    color: #222;
}

.cta {
    text-align: center;
    margin: 40px 0;
    background-color: #ede7f6;
}

@media (max-width: 900px) {
    .services-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 600px) {
    .services-grid {
        grid-template-columns: 1fr;
    }
    .hero h1 {
        font-size: 32px;
    }
}

@media (max-width: 768px) {
    .header {
        flex-direction: column;
        align-items: center;
    }
    .hero h1 {
        font-size: 32px;
    }
    .hero p {
        font-size: 16px;
    }
    .services-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    .service-card {
        padding: 20px;
    }
    .padding {
        margin: 20px 0;
    }
}