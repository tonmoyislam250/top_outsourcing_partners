body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #f7fcff;
}

.container {
    max-width: 900px;
    margin: 40px auto;
    background-color: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border: 2px solid #00bfff;
}

.Schedule_header {
    background-color: #dff3ff;
    text-align: center;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px; /* Added margin to separate header from form */
}

form {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
}

.form-group {
    flex: 1 1 45%;
    display: flex;
    flex-direction: column;
}

.form-group.full {
    flex: 1 1 100%;
}

label {
    margin-bottom: 5px;
    font-weight: 600;
}

input,
select,
textarea {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.submit-btn {
    text-align: center;
    margin-top: 20px;
}


.submit-btn button {
    padding: 10px 30px;
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 20px;
    cursor: pointer;
}