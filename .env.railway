# Railway Deployment Environment Variables
# Copy these to your Railway environment variables

# Basic Laravel Configuration
APP_NAME="Top Outsourcing Partners"
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC

# CRITICAL: Set your actual Railway domain here
APP_URL=https://topoutsourcingpartners.com

# Database (Railway PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}

# Storage Configuration for Railway (CRITICAL)
FILESYSTEM_DISK=public
FILESYSTEM_DRIVER=local

# Cache Configuration
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Mail Configuration (update with your actual mail service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Railway Specific
PORT=3000

# Force HTTPS in production
FORCE_HTTPS=true
